#!/bin/bash

set -eu
[[ "${RD_JOB_LOGLEVEL:-}" == "DEBUG" ]] && set -vx
syntax_error() { echo >&2 "SYNTAX: $*"; exit 2; }

(( $# != 2 )) && { 
  syntax_error "$0 <filepath> <recursive?>"
}

FILEPATH=$1 RECURSIVE=$2

[[ ! -r "$FILEPATH" ]] && {
  syntax_error "filepath does not exist: $FILEPATH"
}

if [[ "$RECURSIVE" == "true" ]]
then
   find "$FILEPATH" -type f -exec dos2unix {} \;
else
   dos2unix "$FILEPATH"
fi

